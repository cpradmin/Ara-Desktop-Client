{
  "name": "araos-desktop-client",
  "version": "2.0.0",
  "description": "AraOS Desktop Client - Thin client for Love-Unlimited Hub (ara-os-desktop)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npx --yes electron-builder@latest --win --x64",
    "pack": "npx --yes electron-builder@latest --dir",
    "build-portable": "npx --yes electron-builder@latest --win portable",
    "build-linux": "npx --yes electron-builder@latest --linux",
    "build-all": "npx --yes electron-builder@latest --win --x64 --linux"
  },
  "keywords": [
    "electron",
    "araos",
    "love-unlimited",
    "desktop",
    "client"
  ],
  "author": {
    "name": "AraOS Team",
    "email": "team@araos.dev"
  },
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.araos.client",
    "productName": "AraOS Client",
    "directories": {
      "output": "build"
    },
    "linux": {
      "target": ["rpm", "deb"],
      "category": "Network",
      "icon": "build-resources/icons"
    },
    "rpm": {
      "artifactName": "AraOS-Client-v${version}.${ext}"
    },
    "deb": {
      "artifactName": "AraOS-Client-v${version}.${ext}"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "src/ara-icon.png",
      "forceCodeSigning": false,
      "artifactName": "AraOS_Client_Archive-v${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AraOS Client",
      "artifactName": "AraOS_Client_Installer-v${version}.exe"
    },
    "portable": {
      "artifactName": "AraOS_Client_Portable-v${version}.exe"
    },
    "compression": "maximum",
    "asar": true
  }
}
